{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "k6-execution-shim": ["./k6-execution-shim.ts"]
    },
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.ts",
    "./expectations/**/*.ts",
    "./utils/**/*.ts",
    "./types.d.ts"
  ],
  "exclude": [
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.js"
  ]
}
